<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:elevation="5dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="3dp"
            android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:padding="10dp"
                      android:weightSum="6">

            <TextView android:id="@+id/tv_date"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:hint="Date"
                      style="@style/timingTextViewList"
                      android:layout_height="wrap_content"/>

            <TextView android:id="@+id/tv_fajar"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:hint="fajar"
                      style="@style/timingTextViewList"
                      android:layout_height="wrap_content"/>

            <TextView android:id="@+id/tv_zuhur"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:hint="zuhur"
                      style="@style/timingTextViewList"
                      android:layout_height="wrap_content"/>

            <TextView android:id="@+id/tv_asar"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:hint="asar"
                      style="@style/timingTextViewList"
                      android:layout_height="wrap_content"/>

            <TextView android:id="@+id/tv_magrib"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:hint="magrib"
                      style="@style/timingTextViewList"
                      android:layout_height="wrap_content"/>

            <TextView android:id="@+id/tv_isha"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:hint="isha"
                      style="@style/timingTextViewList"
                      android:layout_height="wrap_content"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>